    "    print('Hello, ' + name1 + '!')\n",
    "    word_list = ['trick','bubbles','pineapple','taipei']\n",
    "    def play():\n",
    "        word = random.choice(word_list)\n",
    "        tries = 10\n",
    "        guesses = ''\n",
    "        while tries > 0:\n",
    "            failed = 0\n",
    "            for char in word:\n",
    "                if char in guesses:\n",
    "                    print (char)\n",
    "                else:\n",
